{
  "name": "salat-an-nabi",
  "displayName": "صلِّ على النبي | Salat An-Nabi - Islamic Azkar & Dhikr",
  "description": "أذكار المسلم للمبرمجين - تذكير بالصلاة على النبي والأذكار الإسلامية | Islamic Azkar, Dhikr & Salawat reminders for Muslim developers - Dua, Quran, Prayer",
  "version": "2.3.0",
  "keywords": [
    "islamic",
    "muslim",
    "azkar",
    "adhkar",
    "dhikr",
    "quran",
    "prayer",
    "salawat",
    "dua",
    "reminder",
    "tasbih",
    "istighfar",
    "أذكار",
    "إسلام",
    "صلاة",
    "دعاء",
    "قرآن",
    "zikir",
    "namaz",
    "productivity"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mahmoodhamdi/salat-an-nabi-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/mahmoodhamdi/salat-an-nabi-vscode/issues"
  },
  "homepage": "https://mahmoodhamdi.github.io/salat-an-nabi-vscode/",
  "publisher": "Mahmoud-Elashwah",
  "engines": {
    "vscode": "^1.60.0"
  },
  "icon": "images/logo.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "salatAnNabi.toggleEnable",
        "title": "Toggle Salat An-Nabi Reminder | تفعيل/تعطيل تذكير الصلاة على النبي"
      },
      {
        "command": "salatAnNabi.showNow",
        "title": "Show Salat An-Nabi Reminder Now | عرض تذكير الصلاة على النبي الآن"
      },
      {
        "command": "salatAnNabi.openSettings",
        "title": "Open Salat An-Nabi Settings | فتح إعدادات صلِّ على النبي"
      }
    ],
    "configuration": {
      "title": "صلِّ على النبي | Salat An-Nabi",
      "properties": {
        "salatAnNabi.enabled": {
          "type": "boolean",
          "default": true,
          "description": "تفعيل أو تعطيل التذكير | Enable or disable reminders"
        },
        "salatAnNabi.intervalMinutes": {
          "type": "number",
          "default": 30,
          "minimum": 1,
          "maximum": 1440,
          "description": "الفترة الزمنية بين التذكيرات (بالدقائق) | Time interval between reminders (in minutes)"
        },
        "salatAnNabi.reminderCount": {
          "type": "number",
          "default": 1,
          "description": "عدد مرات التذكير في كل فترة | Number of reminders per interval"
        },
        "salatAnNabi.language": {
          "type": "string",
          "enum": [
            "ar",
            "en",
            "fr",
            "tr",
            "ur",
            "id",
            "bn",
            "hi",
            "fa",
            "ms",
            "pa",
            "ha",
            "ps",
            "sw",
            "ku",
            "uz",
            "az",
            "so",
            "bs",
            "sq",
            "de",
            "es"
          ],
          "enumDescriptions": [
            "العربية (Arabic)",
            "English",
            "Français (French)",
            "Türkçe (Turkish)",
            "اردو (Urdu)",
            "Bahasa Indonesia (Indonesian)",
            "বাংলা (Bengali)",
            "हिंदी (Hindi)",
            "فارسی (Persian)",
            "Bahasa Melayu (Malay)",
            "ਪੰਜਾਬੀ (Punjabi)",
            "Hausa",
            "پښتو (Pashto)",
            "Kiswahili (Swahili)",
            "کوردی (Kurdish)",
            "O'zbek (Uzbek)",
            "Azərbaycan (Azerbaijani)",
            "Soomaali (Somali)",
            "Bosanski (Bosnian)",
            "Shqip (Albanian)",
            "Deutsch (German)",
            "Español (Spanish)"
          ],
          "default": "ar",
          "description": "لغة التذكير | Reminder language (22 languages)"
        },
        "salatAnNabi.useCustomMessages": {
          "type": "boolean",
          "default": false,
          "description": "استخدام رسائل المخصصة | Use custom messages"
        },
        "salatAnNabi.customMessages": {
          "type": "array",
          "default": [],
          "description": "رسائل مخصصة للتذكير | Custom reminder messages"
        },
        "salatAnNabi.notificationDuration": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 60,
          "description": "مدة عرض الإشعار (بالثواني) | Notification display duration (in seconds)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint .",
    "test": "vscode-test",
    "pretest": "npm run compile"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^14.0.0",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^8.0.0",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  }
}
